<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>RestWithServlets</display-name>

  <servlet>
    <servlet-name>Users</servlet-name>
    <servlet-class>org.yolkin.rest.UsersRestControllerV1</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Files</servlet-name>
    <servlet-class>org.yolkin.rest.FilesRestControllerV1</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Events</servlet-name>
    <servlet-class>org.yolkin.rest.EventsRestControllerV1</servlet-class>
  </servlet>

<!--  ========================================================================================================  -->

  <servlet-mapping>
    <servlet-name>Users</servlet-name>
    <url-pattern>/api/v1/users/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Files</servlet-name>
    <url-pattern>/api/v1/fileEntities/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Events</servlet-name>
    <url-pattern>/api/v1/eventEntities/*</url-pattern>
  </servlet-mapping>

</web-app>